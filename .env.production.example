# Production Environment Configuration
# Copy this file to .env.production and configure for your deployment

# ===== DOMAIN CONFIGURATION =====
DOMAIN=yourdomain.com
ADMIN_SUBDOMAIN=admin

# ===== DATABASE CONFIGURATION =====
POSTGRES_DB=ecommerce_saas_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-super-secure-db-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ===== REDIS CONFIGURATION =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-super-secure-redis-password-here

# ===== SECURITY & JWT =====
JWT_SECRET=your-256-bit-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your-32-byte-encryption-key-for-sensitive-data
BCRYPT_ROUNDS=12

# ===== PAYMENT GATEWAYS =====
# Stripe (International)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# bKash (Bangladesh)
BKASH_APP_KEY=your-bkash-app-key
BKASH_APP_SECRET=your-bkash-app-secret
BKASH_USERNAME=your-bkash-username
BKASH_PASSWORD=your-bkash-password
BKASH_SANDBOX=false

# Nagad (Bangladesh)
NAGAD_MERCHANT_ID=your-nagad-merchant-id
NAGAD_MERCHANT_PRIVATE_KEY=your-nagad-private-key
NAGAD_SANDBOX=false

# ===== EMAIL CONFIGURATION =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_NAME=Your SaaS Platform
SMTP_FROM_EMAIL=noreply@yourdomain.com

# ===== FILE STORAGE =====
# For production, use S3 or compatible service
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET=your-s3-bucket-name
AWS_ENDPOINT=https://s3.amazonaws.com

# ===== APPLICATION CONFIGURATION =====
GIN_MODE=release
PORT=8080
NODE_ENV=production
ENVIRONMENT=production

# ===== API URLS =====
API_BASE_URL=https://yourdomain.com/api/v1
FRONTEND_URL=https://yourdomain.com
ADMIN_URL=https://admin.yourdomain.com

# ===== WEBHOOKS & INTEGRATIONS =====
WEBHOOK_SECRET=your-webhook-secret-for-third-party-services

# ===== MONITORING & LOGGING =====
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_METRICS=true

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=50

# ===== SESSION CONFIGURATION =====
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400

# ===== CORS CONFIGURATION =====
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-ID

# ===== SSL/TLS =====
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket

# ===== CACHE CONFIGURATION =====
CACHE_TTL=3600
CACHE_MAX_MEMORY=256mb

# ===== FEATURE FLAGS =====
ENABLE_REGISTRATION=true
ENABLE_MULTI_CURRENCY=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# ===== THIRD-PARTY SERVICES =====
# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# SMS Service (for OTP)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Social Login (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret